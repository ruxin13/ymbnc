.top{
	width: 100%;
	height: 100rpx;
	margin-bottom: 40rpx;
}
.m-wrap{
	width: 670rpx;
	margin: 0 auto 44rpx;
	box-shadow: 0 0 30rpx rgba(134, 143, 173, .15);
}
.m-img{
	width: 670rpx;
	height: 536rpx;
	display: block;
}
.info{
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: 158rpx;
	background-color: #fff;
	margin: 0 auto;
	box-sizing: border-box;
	padding: 0 30rpx;
}
.inf-l{
	flex: 1;
}
.inf-name{
	font-size: 52rpx;
	color: #333333;
	padding: 4rpx 0;
}
.inf-sname{
	font-size: 28rpx;
	color: #666666;
}
.inf-r{
	display: flex;
	align-items: center;
	justify-content: flex-end;
}
.inf-fun{
	display: flex;
	align-items: center;
	margin-right: 40rpx;
}
.inf-fun.share{
	background-color: transparent;
	border: 0;
}
.inf-fun.share::after{
	border: 0;
}
.inf-fun:last-child{
	margin-right: 0;
}
.inf-icon{
	width: 62rpx;
	height: 62rpx;
	margin-right: 8rpx;
}
.inf-num{
	font-size: 28rpx;
	color: #666666;
}
.mlist{
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 0 28rpx;
	border-bottom: solid 1rpx #d9d9d9;
	margin: 0 40rpx 60rpx;
}
.mli{
	font-size: 28rpx;
	display: flex;
	align-items: center;
}
.mli-icon{
	width: 44rpx;
	height: 44rpx;
	line-height: 44rpx;
	text-align: center;
	border-radius: 22rpx;
	color: #fff;
	margin-right: 12rpx;
}
.mli-icon.tp1{
	background-image: linear-gradient(-38deg, #00CA9D 0%, #3BD6A1 23%, #AEEFAA 69%, #FBFFC1 100%);
}
.mli-icon.tp2{
	background-image: linear-gradient(225deg, #FF8960 0%, #FF62A5 100%);
}
.mli-icon.tp3{
	background-image: linear-gradient(-45deg, #FF8E64 0%, #FFC94D 100%);
}
.mli-name{
	color: #666;
}
.mtli{
	margin: 0 40rpx 40rpx;
}
.mt-tit{
	display: inline-block;
	color: #fff;
	font-size: 32rpx;
	height: 60rpx;
	line-height: 60rpx;
	padding: 0 26rpx;
	border-radius: 4rpx 4rpx 0 0;
}
.mtli .mt-tit.tp1{
	background-image: linear-gradient(-66deg, #00CA9D 0%, #3BD6A1 23%, #84E6A7 100%);
}
.mtli .mt-tit.tp2{
	background-image: linear-gradient(-45deg, #FF8E64 0%, #FFC94D 100%);
}
.mtli .mt-tit.tp3{
	background-image: linear-gradient(151deg, #FD7292 0%, #FD5E2C 100%);
}

.mt-con{
	background-color: #F3F4F7;
	padding: 24rpx;
	font-size: 28rpx;
	color: #666;
	line-height: 48rpx;
}
.bottom{
	width: 100%;
	height: 200rpx;
	display: block;
}