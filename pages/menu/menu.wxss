.top{
	background: url("http://p.ihuada.com/mc/dev/img/ymbnc.png") no-repeat center top;
	background-size: 100%;
	height: 194rpx;
	box-sizing: border-box;
	padding-top: 20rpx;
}
.search-sh{
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: #fff;
	width: 630rpx;
	height: 85rpx;
	border-radius: 20rpx;
	margin: 0 auto;
}
.search-sh icon{
	display: block;
	margin-right: 14rpx;
}
.search-sh text{
	font-size: 32rpx;
	color: #666666;
}
.list{
	display: flex;
	align-items: center;
	justify-content: space-between;
	flex-wrap: wrap;
	padding: 40rpx 60rpx 0;
}
.mli{
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	padding: 12rpx 0;
}
.mli:nth-child(3n-1){
	margin: 0 88rpx;
}
.mli-img{
	width: 150rpx;
	height: 150rpx;
	display: block;
	margin-bottom: 4rpx;
}
.mli-txt{
	font-size: 32rpx;
	color: #666666;
	text-align: center;
	line-height: 44rpx;
	height: 44rpx;
}